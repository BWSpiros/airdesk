<section class="filter-controls">
  You'll be able to filter here soon!
  <hr>
</section>

<div class="tile-field group">
<% @offices.each do |office| %>
  <div class="listing-tile group">
    <div class="search-image">
      <% if office.photos[0] != nil %>
        <%= image_tag office.photos[0].picture.url(:search) %>
      <% else %>
        <%= image_tag "default-image.jpg" %>
      <% end %>
    </div>
    <div class="search-footer group">
      <p>
        <%= office.title %>
      </p>
      <p>
        $<%= office.price %>
      </p>

    </div>
  </div>
<% end %>
</div>

